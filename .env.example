# Puerto del servidor
SERVER_PORT=8080

# Configuración de la base de datos
DB_URL=jdbc:postgresql://db:5432/peluqueria_marzetti
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DRIVER=org.postgresql.Driver

# JWT
JWT_SECRET=your_jwt_secret
JWT_EXPIRATION=86400000

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_token
MERCADOPAGO_PUBLIC_KEY=your_mercadopago_key

# URLs de redirección de MercadoPago
MERCADOPAGO_SUCCESS_URL=https://tu-dominio.com/checkout/success
MERCADOPAGO_PENDING_URL=https://tu-dominio.com/checkout/pending
MERCADOPAGO_FAILURE_URL=https://tu-dominio.com/checkout/failure

# OpenAPI / Swagger
API_DOCS_PATH=/api-docs
SWAGGER_UI_PATH=/swagger-ui.html

# Logging
LOG_LEVEL=INFO

# CORS (agregar todos los dominios donde se desplegará la app)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,https://tu-dominio.com,http://tu-dominio.com

# Frontend
VITE_API_URL=/api
VITE_MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key
